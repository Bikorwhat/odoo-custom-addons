<odoo>
    <data>
        <!-- Stage Wizard Form View -->
        <record id="helpdesk_systems_view_stage_wizard_form" model="ir.ui.view">
            <field name="name">helpdesk_systems.stage_wizard.form</field>
            <field name="model">helpdesk_systems.stage_wizard</field>
            <field name="arch" type="xml">
                <form string="Change Helpdesk Ticket Stage">
                    <group>
                        <field name="remarks" required="1"/>
                        <field name="document" filename="document_name" widget="binary"/>
                    </group>
                    <footer>
                        <button string="Update" name="action_update_stage" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
